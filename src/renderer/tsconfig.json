{
  "extends": "../tsconfig.base",
  "compilerOptions": {
    "noImplicitAny": false,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["esnext", "dom"],
    "types": ["react", "webpack-env"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "~assets/*": ["../../assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
