{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "timeout": 30000,
      "webRoot": "${workspaceFolder}/src/renderer"
    },
    {
      "name": "webpack-dev-server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
      "runtimeArgs": [],
      "args": ["--config", ".webpack/webpack.dev"],
      "outputCapture": "std"
    },
    {
      "name": "Main",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 5858
    },
    {
      "name": "nodemon",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "port": 5858,
      "restart": true,
      "runtimeArgs": ["nodemon.js"],
      "outputCapture": "std"
    }
  ],
  "compounds": [
    {
      "name": "Debug",
      "configurations": ["webpack-dev-server", "nodemon", "Main", "Renderer"]
    }
  ]
}
