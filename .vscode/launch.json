{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Main",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9228,
      "timeout": 5000,
      "protocol": "inspector"
    },
    {
      "name": "nodemon",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "port": 9228,
      "runtimeArgs": ["--inspect-brk=9228", "nodemon.js"],
      "outputCapture": "std",
      "postDebugTask": "postdebugKill"
    },
    {
      "name": "webpack-dev-server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
      "runtimeArgs": [],
      "args": ["--config", ".webpack/webpack.dev"],
      "outputCapture": "std"
    }
  ],
  "compounds": [
    {
      "name": "Debug",
      "configurations": ["webpack-dev-server", "nodemon", "Main"]
    }
  ]
}
