{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "timeout": 30000,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src/renderer"
    },
    {
      "name": "Main",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9228,
      "timeout": 10000
    },
    {
      "name": "nodemon",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}\\node_modules\\.bin\\nodemon.cmd"
      },
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["src/main/dev"],
      "console": "integratedTerminal",
      "restart": true,
      "outputCapture": "std"
    },
    {
      "name": "webpack-dev-server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
      "args": ["--config", ".webpack/webpack.dev"],
      "outputCapture": "std"
    }
  ],
  "compounds": [
    {
      "name": "Debug",
      "configurations": ["webpack-dev-server", "nodemon"]
    }
  ]
}
